{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2022",
    "module": "ES2022",
    "outDir": ".build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2015"],
    "noUncheckedIndexedAccess": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["./**/*.ts"]
}